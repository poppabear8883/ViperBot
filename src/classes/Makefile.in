# Makefile for scripts/
SHELL = @SHELL@
top_srcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

@SET_MAKE@
INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_SCRIPT = @INSTALL_SCRIPT@

CLASSES = bot.py network.py viperbot.py __init__.py

doofus:
	@echo ""
	@echo "Let's try this from the right directory..."
	@echo ""
	@cd .. && $(MAKE)

all: $(CLASSES)

clean:
	@rm -f *~

install:
	@if test ! -d $(DEST)/classes; then \
		echo "Creating 'classes' subdirectory."; \
		$(top_srcdir)/misc/mkinstalldirs $(DEST)/classes >/dev/null; \
		echo "Copying classes."; \
		for i in $(CLASSES); do \
			$(INSTALL_DATA) $(srcdir)/$$i $(DEST)/classes/; \
		done; \
	fi

#safety hash
